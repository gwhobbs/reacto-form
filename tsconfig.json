{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./build",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "stories/**/*.ts", "stories/**/*.tsx", "stories/**/*.stories.ts", "stories/**/*.stories.tsx"],
  "exclude": ["node_modules"]
}
